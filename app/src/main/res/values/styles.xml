<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.brown_theme">
        <item name="android:windowBackground">@color/brown_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="text_large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="text_small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="text_white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="text_large.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_large.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_small.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_medium.red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="padding_horizontal_medium">
        <item name="android:paddingLeft">@dimen/medium_space</item>
        <item name="android:paddingRight">@dimen/medium_space</item>
    </style>

    <style name="button_brown">
        <item name="android:background">@drawable/shape_button_rounded</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="button_dark_brown">
        <item name="android:background">@drawable/shape_button_dark_brown</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#CCBA95</item>
    </style>

    <style name="login_copyright" parent="text_small.white">
        <item name="android:gravity">center</item>
    </style>

    <style name="login_welcome" parent="text_large.white">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="login_editText" parent="text_large.black">
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="button_operation">
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <style name="button_operation.plus">
        <item name="android:background">@drawable/selector_button_operation_plus</item>
    </style>

    <style name="button_operation.minus">
        <item name="android:background">@drawable/selector_button_operation_minus</item>
    </style>

    <style name="summary_black_header" parent="text_large.white">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/medium_space</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
